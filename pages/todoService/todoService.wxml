<van-divider contentPosition="center" custom-style="color:#00AA00;font-size:medium;border-color: #E0E0E0">订单</van-divider>

<view>
  <van-cell-group custom-class="margin2">
    <van-cell>
      <view class="flexCell">
        <view class="itemName">订单号</view>
        <text>{{orderId}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">下单时间</view>
        <text>{{orderTime}}</text>
      </view>
    </van-cell>

    <van-divider contentPosition="center" custom-style="color:#00AA00;font-size:medium;border-color: #E0E0E0">客户信息</van-divider>

    <van-cell>
      <view class="flexCell">
        <view class="itemName">客户姓名</view>
        <text>{{clientName}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">联络电话</view>
        <van-button plain round hairline size="small" icon="phone-o" color="#00AA00" custom-style="font-size:medium">联络</van-button>
        <text>{{clientPhoneNum}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">服务位置</view>
        <text>{{clientLocation}}</text>
      </view>
    </van-cell>

    <van-divider contentPosition="center" custom-style="color:#00AA00;font-size:medium;border-color: #E0E0E0">需求详情</van-divider>

    <van-cell>
      <view class="flexCell">
        <view class="itemName">服务类型</view>
        <text>{{serviceProject}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">上门时间</view>
        <text>{{serviceTime}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">次数/周期</view>
        <text>{{period}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">收费标准</view>
        <text>{{rates}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">备注</view>
        <text>{{comment}}</text>
      </view>
    </van-cell>

    <van-divider contentPosition="center">已经到底啦</van-divider>

  </van-cell-group>
</view>