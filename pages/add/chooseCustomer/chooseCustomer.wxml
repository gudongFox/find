<van-search value="{{ value }}" placeholder="客户姓名" use-action-slot bind:change="onChange" bind:search="onSearch"
          background="#f0f0f0" shape="round">
          <view slot="action" bind:tap="onClick">
            <van-button plain type="primary" size="small">搜索</van-button>
          </view>
        </van-search>
        <view class="margin1">
          <van-icon name="bell" color="#8A2BE2" />
          <text style="color:#8A2BE2;font-size:small;margin-left:1rem">我的客户</text>
        </view>
        <block wx:for="{{customers}}"  wx:key="id">
          <view id="{{item.id}}" bindtap="backAdd">
          <van-cell-group>
            <van-cell clickable="true">
              <van-row>
                <van-col span="3">
                  <view class="display-center">
                    <van-icon name="wap-home-o" size="30px" color="#00BBFF" />
                  </view>
                </van-col>
                <van-col span="5">
                  <view><text class="textbig,textblack">{{item.name}}</text></view>
                </van-col>
                <van-col span="10">

                  <view class="display-center">
                    <text class="textsmall">{{item.location}}</text>
                  </view>
                  <view class="display-center">
                    <text class="textsmall">服务：{{item.times}}次</text>
                  </view>
                </van-col>
                <van-col span="6">
                  <view class="display-center">
                    <text class="textsmall">{{item.remark}}</text>
                  </view>
                </van-col>
              </van-row>

            </van-cell>

          </van-cell-group>
        </view>
        </block>
        <view class="divLine"></view>