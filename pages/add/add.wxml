<view class="appading">
		<view class="top">
			<text>{{steps[0].text}}</text>
			<van-button plain type="primary" size="small" style="margin-left:150px" hairline round wx:if="{{showServiceKind}}" bindtap="change1">修改</van-button>
		</view>
		<view class="margin2，whitebackground,top,appading1" wx:if="{{!showServiceKind}}">
			<van-row gutter="20">
				<van-col span="7">
					<view class="display-center"><text class="textsmall,margin2">保洁服务</text></view>
				</van-col>
				<van-col span="17">
					<view class="flex">
						<van-button round plain type="primary" size="small" wx:for="{{kinds}}" class="button-appading" bindtap="show1">{{item.text}}
						</van-button>
					</view>
				</van-col>
			</van-row>
		</view>
		<view wx:if="{{showServiceKind}}">
			<van-cell-group custom-class="margin2">
				<van-cell>
					<van-row>
						<van-col span="8">
							<view>服务类型：</view>
						</van-col>
						<van-col>
							<view>家庭保洁</view>
						</van-col>

					</van-row>

				</van-cell>

			</van-cell-group>
		</view>
	</view>

	<!-- 3=============== -->
	<view class="appadingleft">{{steps[1].text}}
    <van-button plain type="primary" size="small" style="margin-left:150px" hairline round wx:if="{{showTime}}" bindtap="change3">修改</van-button>
		<view class="margin2,whitebackground,top" wx:if="{{!showTime}}">
			<form>
				<van-cell-group>
					<van-field name="name" type="number" placeholder="2" label="预计服务小时(单位：h)：" title-width="55%" border="{{ false }}" bind:change="onChange">
					</van-field>
				</van-cell-group>
				<van-cell-group>
					<van-field name="tel" placeholder="2020.07.08" label="期望上门日期：" title-width="55%" border="{{ false }}" bind:change="onChange" />
				</van-cell-group>
				<van-cell-group>
					<van-field name="tel" placeholder="8:00" label="期望上门时间：" title-width="55%" border="{{ false }}" bind:change="onChange" />
				</van-cell-group>
				<van-cell-group>
					<van-field name="number" placeholder="请输入次数" label="次数/周次：" title-width="55%" border="{{ false }}" bind:change="onChange" />
				</van-cell-group>
				<van-cell-group>
					<van-field name="remark" placeholder="备注" label="备注：" title-width="55%" border="{{ false }}" bind:change="onChange" />
				</van-cell-group>
			</form>
		</view>
		<view wx:if="{{!showTime}}">
			<van-button plain type="primary" size="small" style="margin-left:100rpx">暂存</van-button>
			<van-button type="primary" size="small" style="margin-left:250rpx" bindtap="show3">下一步</van-button>
		</view>
		<view wx:if="{{showTime}}">
			<van-cell-group custom-class="margin2">
				<van-cell>
					<van-row>
						<van-col span="8">
							<view>预计服务小时：</view>
							<view>期望上门日期：</view>
							<view>期望上门时间：</view>
							<view>次数/周次：</view>
							<view>备注：</view>
						</van-col>
						<van-col offset="2">
							<view>2小时</view>
							<view>2020.07.08</view>
							<view>8:00</view>
							<view>共1次</view>
							<view>有宠物</view>
						</van-col>
					</van-row>

				</van-cell>
			</van-cell-group>
		</view>
	</view>
