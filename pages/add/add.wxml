<view wx:if="{{end}}">
	<view class="appadingleft">{{steps[4].text}}</view>
	<van-notice-bar color="#1989fa" background="#ecf9ff" left-icon="info-o" text="形成订单前，请认真核对上述信息！" />
	<view class="margin2">
		<van-cell-group custom-class="margin2">
			<van-cell>
				<van-row>
					<van-col span="8">
						<view>管理费：</view>
						<view>劳务费：</view>
					</van-col>
					<van-col>
						<view>30元</view>
						<view>{{user[1].tel}}</view>
					</van-col>
				</van-row>
			</van-cell>
		</van-cell-group>
		<van-button plain type="primary" size="small" style="margin-left:100rpx" bindtap="backIndex">取消</van-button>
		<van-button type="primary" size="small" style=" margin-left:250rpx" bindtap="backIndex">形成订单</van-button>
	</view>
</view>