<view class="flexRow">
  <view class="flexStart">
    <van-icon name="clock" color="#00AA00" />
    <text style="color:#00AA00;font-size:small;margin-left:15rpx">客户信息</text>
  </view>
</view>

<view>
  <van-cell-group custom-class="margin2">
    <van-cell>
      <view class="flexCell">
        <view>客户姓名</view>
        <view class="textblack">{{clientName}}</view>
      </view>
      <view class="flexCell">
        <view>联络电话</view>
        <van-button plain round hairline size="small" icon="phone-o" color="#00AA00">联络</van-button>
        <view class="textblack">{{clientPhoneNum}}</view>
      </view>
      <view class="flexCell">
        <view>服务位置</view>
        <view class="textblack">{{clientLocation}}</view>
      </view>
      <view class="flexCell">
        <view>门牌号</view>
        <view class="textblack" space="emsp">{{clientHouseNum}}</view>
      </view>
    </van-cell>
  </van-cell-group>
</view>

<view class="flexRow">
  <view class="flexStart">
    <van-icon name="clock" color="#00AA00" />
    <text style="color:#00AA00;font-size:small;margin-left:15rpx">我的一周日程表</text>
  </view>
  <!-- <view>
    <button size="mini" type="primary" plain="true">修改</button>
  </view> -->
</view>

<view class="flexRow">
  <view class="flexStart">
    <van-icon name="clock" color="#00AA00" />
    <text style="color:#00AA00;font-size:small;margin-left:15rpx">补充需求内容</text>
  </view>
  <!-- <view>
    <button size="mini" type="primary" plain="true">修改</button>
  </view> -->
</view>

<view>
  <van-cell-group custom-class="margin2">
    <van-cell>
      <view class="flexCell">
        <view>服务类型</view>
        <van-dropdown-menu>
          <van-dropdown-item value="{{serviceProject}}" options="{{projects}}" />
        </van-dropdown-menu>
      </view>
      <view class="flexCell">
        <view>预计服务时长</view>
        <!-- <van-button plain round hairline size="small" icon="phone-o" color="#00AA00">联络</van-button> -->
        <view class="flexCell">
          <input style="border-radius:10rpx;width:100rpx;background-color:#E0E0E0;text-align:center;color:black;" value="{{serviceLength}}" bindinput="setServiceLength" />
          <view class="textblack">小时</view>
        </view>
        <!-- <van-stepper value="{{servcieTime}}" /> -->
        <!-- <view class="textblack">小时</view> -->
      </view>
      <view class="flexCell">
        <view>期望上门日期</view>
        <input style="border-radius:10rpx;width:250rpx;background-color:#E0E0E0;text-align:center;color:black;margin:0rpx 0rpx 0rpx 0rpx" model:value="{{serviceDate}}" bindfocus="setServiceDate" />
        <!-- <view class="textblack">成都市锦江文化中心</view> -->
      </view>
      <view class="flexCell">
        <view>期望上门时间</view>
        <input style="border-radius:10rpx;width:250rpx;background-color:#E0E0E0;text-align:center;color:black;margin:0rpx 0rpx 0rpx 0rpx" value="{{serviceTime}}" bindfocus="setServiceTime" />
      </view>
      <view class="flexCell">
        <view>次数</view>
        <view class="flexCell">
          <view class="textblack">第</view>
          <input style="border-radius:10rpx;width:100rpx;background-color:#E0E0E0;text-align:center;color:black;" value="{{serviceNumthTimes}}" bindinput="setServiceNumthTimes" />
          <view class="textblack">次</view>
        </view>
      </view>
      <view class="flexCell">
        <view>总次数</view>
        <view class="flexCell">
          <view class="textblack">共</view>
          <input style="border-radius:10rpx;width:100rpx;background-color:#E0E0E0;text-align:center;color:black;" value="{{serviceTotalTimes}}" bindinput="setServiceTotalTimes" />
          <view class="textblack">次</view>
        </view>
      </view>
      <view class="flexCell">
        <view>周期</view>
        <view class="flexCell">
          <view class="textblack">间隔</view>
          <input style="border-radius:10rpx;width:100rpx;background-color:#E0E0E0;text-align:center;color:black;" value="{{serviceInterval}}" bindinput="setServiceInterval" />
          <view class="textblack">天</view>
        </view>
      </view>
      <view class="flexCell">
        <view>收费标准</view>
        <view class="flexCell">
          <input style="border-radius:10rpx;width:150rpx;background-color:#E0E0E0;text-align:center;color:black;" value="{{serviceRate}}" bindinput="setServiceRate" />
          <view class="textblack">元/小时</view>
        </view>
      </view>
      <view class="flexCell">
        <view>备注</view>
        <input style="border-radius:10rpx;width:400rpx;height:100rpx;background-color:#E0E0E0;text-align:center;color:black;" value="{{serviceComment}}" bindinput="setServiceComment" />
      </view>
    </van-cell>

  </van-cell-group>

  <van-divider></van-divider>

  <view class="flexRow">
    <van-button round plain type="primary" color="#00AA00" custom-style="width:250rpx;height:80rpx">委托伙伴</van-button>
    <van-button round type="primary" color="#00AA00" custom-style="width:250rpx;height:80rpx;">我来接单</van-button>
  </view>

</view>

<van-divider contentPosition="center">已经到底啦</van-divider>

<van-popup show="{{isShowDateSelection}}" round position="bottom">
  <van-datetime-picker type="date" value="{{currentDate}}" min-date="{{minDate}}" title="请选择上门日期" bind:change="changeDate" bind:confirm="confirmDate" bind:cancel="cancelDate" />
</van-popup>

<van-popup show="{{isShowTimeSelection}}" round position="bottom">
  <van-datetime-picker type="time" value="{{currentTime}}" title="请选择上门时间" bind:confirm="confirmTime" bind:cancel="cancelTime" />
</van-popup>