<view class="flexRow">
  <view class="flexStart">
    <van-icon name="clock" color="#00AA00" />
    <text style="color:#00AA00;margin-left:15rpx">个人信息</text>
  </view>
  <!-- <view>
    <button size="mini" type="primary" plain="true">修改</button>
  </view> -->
</view>

<view>
  <van-cell-group custom-class="margin2">
    <van-cell>
      <view class="flexCell">
        <view class="itemName">姓名</view>
        <text>{{name}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">性别</view>
        <text>{{gender}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">年龄</view>
        <text>{{age}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">联络电话</view>
        <text>{{phoneNum}}</text>
      </view>
      <view class="flexCell">
        <view class="itemName">位置</view>
        <text>{{location}}</text>
      </view>
    </van-cell>

  </van-cell-group>
</view>

